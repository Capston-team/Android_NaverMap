<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/carrier_header">
        <ListPreference
            app:defaultValue="carrier"
            app:entries="@array/carrier_entries"
            app:entryValues="@array/carrier_values"
            app:key="carrierPreference"
            app:title="@string/carrier_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/rate_header">
        <ListPreference
            app:defaultValue="rate"
            app:key="ratePreference"
            app:entries="@array/defaultValue"
            app:entryValues="@array/defaultValue"
            app:title="@string/rate_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
